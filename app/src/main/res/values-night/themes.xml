<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NotesApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/sky_blue</item>
        <item name="colorSecondary">@color/sky_blue</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/sky_blue</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    <!-- Popup Animation -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
    </style>

    <!-- Alert Dialog -->
    <style name="MyAlertDialogTheme" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/sky_blue</item>
        <item name="colorSecondary">@color/sky_blue</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/sky_blue</item>
    </style>

</resources>