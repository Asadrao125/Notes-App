<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NotesApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/sky_blue</item>
        <item name="colorSecondary">@color/sky_blue</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/sky_blue</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    <!-- Date Picker Dialog Theme -->
    <style name="my_dialog_theme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/sky_blue</item>             <!-- Header Background -->
        <item name="android:windowBackground">@color/white</item>     <!-- Calendar Background -->
        <item name="android:textColorPrimary">@color/black</item>     <!-- Days of the Month -->
        <item name="android:textColorSecondary">@color/sky_blue</item>  <!-- Days of the Week -->
    </style>
</resources>